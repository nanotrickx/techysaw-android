<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashScreenApp" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">1500</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Techysaw</item>
    </style>

    <style name="Theme.Techysaw" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary_blue</item>
    </style>

    <style name="ParagraphText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/editor_paragraph</item>
    </style>
</resources>